# Docker Deployment Configuration

# Database
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=sma_dwh
POSTGRES_PORT=5432

# Application
APP_PORT=8000
APP_ENV=production
DEBUG=false

# Database connection string
# Format: postgresql://user:password@host:port/database
# For Docker: Use service name 'db' as host
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/sma_dwh

# For connecting from host machine to Docker DB:
# DATABASE_URL=postgresql://postgres:your_secure_password_here@localhost:5432/sma_dwh

# CORS Settings
CORS_ORIGINS=*

